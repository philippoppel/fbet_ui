{
  "version": 2,
  "builds": [
    {
      "src": "api/requirements.txt",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" }
    }
  ],
  "routes": [
     {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/"
    }
  ]
}
